@model HelloWorld.Models.Osoba
@{
    ViewBag.Title = "StrongTypedFormHelper";
}

<h2>StrongTypedFormHelper</h2>
@foreach (var item in ViewBag.Mjesta)
{
    @item
}

@using (Html.BeginForm("StrongTypedFormHelper", "HtmlHelperi",FormMethod.Post))
{
    <div>
        <label for="Ime">Ime:</label>
        @Html.TextBoxFor(x=>x.Ime)
    </div>
    <div>
        <label for="Prezime">Prezime:</label>
        @Html.TextBoxFor(x => x.Prezime)
    </div>
    <div>
        <label for="Email">Email:</label>
        @Html.TextBoxFor(x => x.Email)
    </div>
    @*<div>
        <label for="MjestoStanovanja">MjestoStanovanja:</label>
        @Html.DropDownListFor("MjestoStanovanja", new SelectList((string[])ViewBag.Mjesta), "--Odaberi--")
    </div>*@
    <div>
        <label for="Spol">Spol:</label>
        @Html.RadioButtonFor(x=>x.Spol, "M", true); Muško <br />
        @Html.RadioButtonFor(x => x.Spol, "Z", true); Žensko <br />
    </div>
    <div>
        <label for="Zaposlen">Zaposlen:</label>
        @Html.CheckBoxFor(x => x.Zaposlen, Model.Zaposlen)
    </div>
    <input type="submit" value="Pošalji" />
}

