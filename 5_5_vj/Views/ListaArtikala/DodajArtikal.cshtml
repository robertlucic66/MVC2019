    <h2>DodajArtikal</h2>
    <div>
        <table>
            <thead>
                <tr>
                    <th>Kategorija</th>
                    <th>Naziv</th>
                    <th>Cijena</th>
                    <th>Količina</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Artikal item in (List<Artikal>)Model)
                {
                <tr>
                    <td>@item.Kategorija</td>
                    <td>@item.Naziv</td>
                    <td style="text-align:right;">@string.Format("{0:N2}", item.Cijena)</td>
                    <td style="text-align:right;">@item.Kolicina</td>
                </tr>
                }
            </tbody>
        </table>
    </div>

<p>
