@model IEnumerable<WebShop.Models.Proizvodi>
@{
    var listCount = 0;
    if (Session["Cart"] != null)
    {
        List<WebShop.Models.Proizvodi> kosarica
            = Session["Cart"] as List<WebShop.Models.Proizvodi>;
        listCount = kosarica.Count;
    }
}
<p>
    @Html.ActionLink("Create New", "Create")
    @* //TODO: treba posstaviti badge za cart, zbirka str.142 *@

</p>

<button type="button" class="btn btn-primary">Košarica <span class="glyphicon glyphicon-shopping-cart"></span><span class="badge"> @listCount</span></button>

<p>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VrijemeKreiranja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cijena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dostupan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MjereProizvoda.Naziv)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VrijemeKreiranja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cijena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dostupan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MjereProizvoda.Naziv)
            </td>
            <td>
                @Html.ActionLink(linkText: "Add to cart",
        actionName: "AddToCart", controllerName: "Cart",
        routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-default" });
            </td>
        </tr>
    }

</table>
